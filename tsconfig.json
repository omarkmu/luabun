{
  "include": ["src/"],
  "compilerOptions": {
    "noEmit": true,
    "target": "es2016",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "build/",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
